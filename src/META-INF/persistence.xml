<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="gameshareExample" transaction-type="RESOURCE_LOCAL">
 	<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>model.AcceptLock</class>
		<class>model.Administrator</class>
		<class>model.SystemUser</class>
		<class>model.Moderator</class>
		<class>model.Analyst</class>
		<class>model.NormalUser</class>
		<class>model.Game</class>
		<class>model.BoardGame</class>
		<class>model.CardGame</class>
		<class>model.ClassicGame</class>
		<class>model.Like</class>
		<class>model.Platform</class>
		<class>model.Sport</class>
		<class>model.Videogame</class>
		<class>model.User</class>
		<class>model.Friendship</class>
		<class>model.reports.GameReport</class>
		<class>model.reports.UserReport</class>
		
  
		<properties>
			<property name="eclipselink.jdbc.batch-writing" value="JDBC"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/gameshare"/>
			<property name="javax.persistence.jdbc.user" value="postgres"/>
			<property name="javax.persistence.jdbc.password" value="giovanni"/>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
			<property name="eclipselink.logging.level" value="OFF"/>
		</properties>
		
		
	</persistence-unit>
</persistence>
